datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id
  accessToken String
  refreshToken String?
}

model SyncRequest {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  userId String
  coursesFound Int?
  coursesAdded Int?
  error String?
}
